<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@product, :html => { :role => "form" }) do |f| %>
        <% if @product.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

            <ul>
            <% @product.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <div class="form-group">
        <%= f.label translate("title") %>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label translate("description") %>
        <%= f.text_area :description, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label translate("image") %>
        <%= f.text_field :image_url, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label translate("price") %>
        <%= f.text_field :price, :class => "form-control" , :type => "number"%>
      </div>
      <div class="form-group">
        <%= f.submit @product.persisted? ? translate("update") : translate("new"), :class => "btn btn-flat bg-olive" %>
      </div>
    <% end %>
    </div>
  </div>
</section> 