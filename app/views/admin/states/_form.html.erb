<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= simple_form_for([:admin, @state], :html => {:role => "form"}) do |f| %>
          <% if @state.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@state.errors.count, "error") %> prohibited this admin_state from being saved:</h4>

                <ul>
                  <% @state.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <%= f.input :name, label: "Name", input_html: {class: "form-control"}, wrapper_html: {class: "form-group"} %>
          <div class="form-group">
            <%= f.label :color, style: "width: 100%;margin-bottom :8px;"%>
            <%= f.color_field :color %>
          </div>
          <%= f.submit :class => "form-group btn btn-flat bg-olive" %>
      <% end %>
    </div>
  </div>
</section> 