<% content_for :content_header do %>
    <section class="content-header">
      <h1>Show
        <small>user</small>
      </h1>

      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><%= link_to "Users", users_path %></li>
        <li class="active">Show</li>
      </ol>
    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to edit_admin_user_path(@user), :class => 'btn btn-flat bg-olive' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                Edit User
            <% end %>

            <%= link_to "Archive User", [:archive, :admin, @user], method: :patch,
                        data: {confirm: "Are you sure you want to archive this user?"},
                        class: "btn btn-flat btn-warning" %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt>Name:</dt>
            <dd><%= @user.username %></dd>

            <dt>Email:</dt>
            <dd><%= @user.email %></dd>

          </dl>


        </div>

        <div class="c-role" style="margin-left: 100px; padding-bottom: 50px">
          <header>
            <h2>Roles</h2>
          </header>
          <% if @user.roles.any? %>
              <ul>
                <% @user.roles.each do |role| %>
                    <li><span style="font-weight: 700"><%= role.project.name %>:</span> <%= role.role.titleize %></li>
                <% end %>
              </ul>
          <% else %>
              <p>This user has no roles.</p>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</section>

