<% content_for :content_header do %>
    <section class="content-header">
      <h1>Listing
        <small>Cart</small>
      </h1>

      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Cart</li>
      </ol>
    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_cart_path(@cart), :class => 'btn btn-flat bg-olive' do %>
                <span class="glyphicon glyphicon-plus"></span>
                New Cart
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
             <%= content_tag_for(:tr, @carts) do |cart| %>
                <td><%= link_to cart, class: "btn btn-info btn-flat" do %>
                      <i class="glyphicon glyphicon-list"></i>
                  <% end %>
                  <%= link_to edit_cart_path(cart), class: "btn btn-primary btn-flat" do %>
                      <i class="glyphicon glyphicon-pencil"></i>
                  <% end %>
                  <%= link_to cart, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger btn-flat" do %>
                      <i class="glyphicon glyphicon-trash"></i>
                  <% end %>
                </td>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

