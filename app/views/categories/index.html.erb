<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>categories</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">categories</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_category_path(@category), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Category
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Name</th>
              <th>Published</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @categories) do |category| %>
              <td><%= category.name %></td>

              <% if category.published == true  %>
                    <td><span class="btn btn-success">Published</span></td>
              <% else %>
                    <td><span class="btn btn-warning">Unpublished</span></td>
              <% end %>
                <td><%= link_to 'Show', category %></td>
                <td><%= link_to 'Edit', edit_category_path(category) %></td>
                <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

