<% content_for :content_header do %>
    <section class="content-header">
      <h1>Show
        <small>project</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><%= link_to "Projects", projects_path %></li>
        <li class="active">Show</li>
      </ol>
    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">

            <% if policy(@project).update? %>
                <%= link_to edit_project_path(@project), {:class => 'btn btn-flat btn-primary'} do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                    Edit Project
                <% end %>
            <% end %>

            <% admins_only do %>
                <%= link_to "New Ticket", new_project_ticket_path(@project), :class => 'btn btn-flat btn-warning' %>
                <%= link_to "Delete Project", admin_project_path(@project), method: :delete,
                            class: "btn btn-flat btn-danger",
                            data: {confirm: "Are you sure you want to delete this project?"} %>
            <% end %>

          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt>Project Name:</dt>
            <dd><%= @project.name %></dd>
            <dt>Tickets:</dt>
            <dd>
              <ul id="tickets">
                <% @project.tickets.each do |ticket| %>
                    <li>
                      #<%= ticket.id %> -
                      <%= link_to ticket.name, [@project, ticket] %>
                    </li>
                <% end %>
              </ul>
            </dd>
            <dt>Description:</dt>
            <dd><%= @project.description %></dd>

          </dl>
        </div>
      </div>
    </div>
  </div>
</section>

