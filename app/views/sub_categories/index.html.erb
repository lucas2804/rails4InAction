<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>sub_categories</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">sub_categories</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_sub_category_path(@sub_category), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Sub category
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Published</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @sub_categories) do |sub_category| %>
              <td><%= sub_category.name %></td>
              <td><%= sub_category.category_id %></td>
              <td><%= sub_category.published %></td>
                            <td><%= link_to 'Show', sub_category %></td>
                <td><%= link_to 'Edit', edit_sub_category_path(sub_category) %></td>
                <td><%= link_to 'Destroy', sub_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

