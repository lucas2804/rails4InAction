<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>Subcategories</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Subcategories</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_sub_category_path(@sub_category), :class => 'btn btn-flat bg-olive' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Sub category
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Published</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @sub_categories.includes(:category)) do |sub_category| %>
              <td><%= sub_category.name %></td>
              <td><%= sub_category.category.nil? ? "" : sub_category.category.name %></td>
                <% if sub_category.published == true  %>
                    <td><span class="label label-success">Published</span></td>
                <% else %>
                    <td><span class="label label-warning">Unpublished</span></td>
                <% end %>
                <td>
                  <%= link_to  sub_category, class: "btn btn-primary btn-flat" do %>
                      <i class="glyphicon glyphicon-list"></i>
                  <% end %>
                  <%= link_to edit_sub_category_path(sub_category), class: "btn btn-default btn-flat" do %>
                      <i class="glyphicon glyphicon-pencil"></i>
                  <% end %>
                  <%= link_to sub_category, class: "btn btn-danger btn-flat", method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="glyphicon glyphicon-trash"></i>
                  <% end %>
                </td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

