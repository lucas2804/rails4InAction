<section class="content invoice">
  <div class="row">
    <div class="col-md-10">

      <%= form_for([project, ticket], :html => {:role => "form"}) do |f| %>
          <% if @ticket.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h4>

                <ul>
                  <% @ticket.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, :class => "form-control" %>
          </div>
          <div class="form-group">
            <h3>Attachments</h3>
            <%= f.fields_for :attachments do |ff| %>
                <%= ff.label :file, "File ##{ff.index + 1}" %>
                <%= ff.file_field :file, as: :file, label: "File ##{ff.index + 1}" %>
                <%= ff.hidden_field :file_cache %>
            <% end %>

          </div>

          <div class="form-group">
            <%= f.submit :class => "btn btn-flat bg-olive" %>
          </div>

      <% end %>
    </div>
  </div>
</section>