<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>Ticket</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Ticket</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_ticket_path(@ticket), :class => 'btn btn-flat bg-olive' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Ticket
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Name</th>
              <th>Project ID</th>
              <th>Title</th>
              <th>Description</th>
              <th>Action</th>

              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @tickets.includes(:project)) do |ticket| %>
              <td><%= ticket.name %></td>
              <td><%= ticket.project_id %></td>
              <td><%= ticket.title %></td>
              <td><%= ticket.description %></td>
                        <td><%= link_to ticket, class: "btn btn-info btn-flat" do %>
              <i class="glyphicon glyphicon-list"></i>
              <% end %>
              <%= link_to edit_ticket_path(ticket), class: "btn btn-primary btn-flat" do %>
              <i class="glyphicon glyphicon-pencil"></i>
              <% end %>
              <%= link_to ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-flat" do %>
              <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

