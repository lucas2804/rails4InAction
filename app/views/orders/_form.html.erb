<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@order, :html => {:role => "form"}) do |f| %>
          <% if @order.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

                <ul>
                  <% @order.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label translate("name") %>
            <%= f.text_field :name, size: 40 ,:class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label translate("address") %>
            <%= f.text_area :address, rows:5, cols: 40, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label translate("email") %>
            <%= f.text_field :email, size:40 ,:class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label translate("pay_type") %>
            <%= f.select :pay_type, Order::PAYMENT_TYPES ,{prompt: "Select a payment method"},class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.submit  'Place Order', :class => "btn btn-flat bg-olive" %>
          </div>
      <% end %>
    </div>
  </div>
</section> 