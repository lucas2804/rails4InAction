<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>brands</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">brands</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_brand_path(@brand), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Brand
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Name</th>
              <th>Published</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @brands) do |brand| %>
              <td><%= brand.name %></td>
                <% if brand.published == true  %>
                    <td><span class="btn btn-success">Published</span></td>
                <% else %>
                    <td><span class="btn btn-warning">Unpublished</span></td>
                <% end %>
                            <td><%= link_to 'Show', brand %></td>
                <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
                <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

