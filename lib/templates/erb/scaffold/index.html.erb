<%% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small><%= human_name.titleize %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active"><%= human_name.titleize %></li>
    </ol>    
  </section>
<%% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%%= link_to new_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => 'btn btn-flat bg-olive' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New <%= human_name.titleize %>
            <%% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
            <% attributes.each do |attribute| -%>
  <th><%= attribute.human_name %></th>
            <% end -%>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%%= content_tag_for(:tr, @<%= plural_table_name %>) do |<%= singular_table_name %>| %>
            <% attributes.each do |attribute| -%>
  <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
            <% end -%>
            <td><%%= link_to <%= singular_table_name %>, class: "btn btn-info btn-flat" do %>
              <i class="glyphicon glyphicon-list"></i>
              <%% end %>
              <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-primary btn-flat" do %>
              <i class="glyphicon glyphicon-pencil"></i>
              <%% end %>
              <%%= link_to <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-flat" do %>
              <i class="glyphicon glyphicon-trash"></i>
              <%% end %>
            </td>
            <%% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

